<Page x:Class="FluentAte.Views.Pages.ManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="管理页"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <Grid Margin="10" VerticalAlignment="Stretch">
        <ui:NavigationView x:Name="NavigationView"
                           MenuItemsSource="{Binding ViewModel.MenuItems}"
                           PaneDisplayMode="LeftFluent"
                           IsPaneToggleVisible="False"
                           BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
                           SelectionChanged="OnNavigationSelectionChanged"
                           FontSize="12"
                           IsBackButtonVisible="Collapsed" >
            <ui:NavigationView.Header>
                <StackPanel Margin="42,32,0,0">
                    <ui:BreadcrumbBar x:Name="BreadcrumbBar" />
                </StackPanel>
            </ui:NavigationView.Header>
        </ui:NavigationView>
    </Grid>
</Page>
