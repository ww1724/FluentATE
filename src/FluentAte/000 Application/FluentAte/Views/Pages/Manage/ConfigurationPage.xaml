      d:DataContext="{d:DesignInstance Type=local:ConfigurationPage}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel>
            <zr:ExpandCard Margin="15">
                <zr:ExpandCard.Header>
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="&#xe65e;" FontSize="22" FontFamily="{StaticResource IconFontFamily}" VerticalAlignment="Center"/>
                            <TextBlock Text="配置面板" FontSize="22" VerticalAlignment="Center" Margin="10 0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource ButtonPrimary}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe664;" FontFamily="{StaticResource IconFontFamily}" VerticalAlignment="Center"/>
                                    <TextBlock Text="添加配置" Margin="5 0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </zr:ExpandCard.Header>
            </zr:ExpandCard>
            <ScrollViewer>
                <ListView ItemsSource="{Binding ViewModel.ConfigStore.ConfigItems}" Background="Transparent" BorderThickness="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
                            <Setter Property="BorderThickness" Value="0 2 0 0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ui:CardControl>
                                <ui:CardControl.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xe6aa;" FontSize="32" FontFamily="{StaticResource IconFontFamily}" VerticalAlignment="Center"/>
                                        <StackPanel Margin="10 0">
                                            <TextBlock Text="{Binding Title}" Style="{StaticResource TextBlockSubTitle}" HorizontalAlignment="Left"/>
                                            <TextBlock Text="{Binding Description}" HorizontalAlignment="Left" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </ui:CardControl.Header>

                                <hc:PropertyGrid SelectedObject="{Binding}"></hc:PropertyGrid>
                                <!--<TextBlock Text="{Binding Value}" />-->
                            </ui:CardControl>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
